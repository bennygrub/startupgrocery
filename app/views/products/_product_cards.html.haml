.week-box
  .vendor-header
    .pull-left
      .img-bg
        =link_to product.vendor do
          =image_tag(product.vendor.vendor_picture, class: "img-responsive", style:"max-width:25px;")
    .pull-left
      %h4{style:"margin-top:3px;font-weight:100;"}
        =link_to product.vendor.name.downcase, product.vendor
    .pull-right
      .text-center
        .heart{class: "product-#{product.id}"}
          =render "favorites/heart", product: product
    .clearfix

  =link_to product do
    =image_tag(product.images.first.url, class: "img-responsive", style: "margin: 10px auto 0 auto;")
  %h3.media-heading
    =product.name
  %p
    =product.description

  %hr
  
  .col-xs-6.text-left
    =link_to product.category do
      .glyphicon.glyphicon-ice-lolly-tasted
      =product.category.name
  .col-xs-6.text-right
    -unless product.buy_link.blank?
      =link_to "Get it now", product.buy_link, target: "_blank", class: "btn btn-primary get-it-now", target: "_blank", data: {link: "#{product.buy_link}"}
  .clearfix