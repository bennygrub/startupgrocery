.page-header
  = link_to favorites_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_favorite_path(@favorite), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show favorite

%dl.dl-horizontal
  %dt Product:
  %dd= @favorite.product_id
  %dt User:
  %dd= @favorite.user_id
