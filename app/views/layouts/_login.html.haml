#logInModal.modal.fade{:role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button", style: "padding: 10px;"}
        %span{"aria-hidden" => "true"} Ã—
      .text-center
        =image_tag("samari.jpg", class: "img-responsive", style: "max-width:200px;margin:auto;")
        %span{style: "font-size:8px;"}
          Sketch credit to:
          =link_to "Fabric Eight", "http://fabriceight.tumblr.com/page/2"
        .modal-header
          %h3.modal-title Login & Join The Foodie Community
      .modal-body
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .col-xs-12.col-sm-8.col-sm-offset-2
            .input-group.input-group-lg
              %span#basic-addon1.input-group-addon @
              = f.email_field :email, autofocus: true, class: "form-control", placeholder: "email"
            %br
            .input-group.input-group-lg
              %span#basic-addon1.input-group-addon #
              = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "password"
            - if devise_mapping.rememberable?
              %br
              .input-group.input-group-lg
                = f.check_box :remember_me
                = f.label :remember_me, style: "margin-left:10px;"
          .clearfix
          %br
          .modal-footer
            %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
            = f.submit "Login", class: "btn btn-primary"
            .clearfix
      .cleafix


