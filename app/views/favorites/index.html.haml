.page-header
  = link_to new_favorite_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Favorite
  %h1 Listing favorites

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Product
        %th User
        %th
        %th
        %th

    %tbody
      - @favorites.each do |favorite|
        %tr
          %td= favorite.product_id
          %td= favorite.user_id
          %td= link_to 'Show', favorite
          %td= link_to 'Edit', edit_favorite_path(favorite)
          %td= link_to 'Destroy', favorite, data: { confirm: 'Are you sure?' }, method: :delete
