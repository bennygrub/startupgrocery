%h2 Sign up
.col-xs-12.col-sm-8.col-md-6
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .input-group.input-group-lg
      %span#basic-addon1.input-group-addon @
      = f.email_field :email, autofocus: true, class: "form-control", placeholder: "email"
    %br
    .input-group.input-group-lg
      %span#basic-addon1.input-group-addon #
      = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "password (#{@minimum_password_length} characters minimum)"
    %br
    .input-group.input-group-lg
      %span#basic-addon1.input-group-addon #
      = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "password repeat"
    %br
    .actions
      = f.submit "Sign up", class: "btn btn-primary"
  = render "devise/shared/links"
